<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="zzy.mz_dream.MainActivity.presenter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgray"
        android:orientation="vertical"
        tools:context="zzy.mz_dream.MainActivity">

        <Button
            android:id="@+id/btnInto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClick}"
            android:background="@color/colorPrimary"
            android:text="databinding"/>

        <Button
            android:id="@+id/btnOkhttp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClick}"
            android:background="@color/colorPrimary"
            android:text="okhttp"/>

        <Button
            android:id="@+id/btnIntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClick}"
            android:background="@color/colorPrimary"
            android:text="intent"/>


        <Button
            android:id="@+id/btnEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClick}"
            android:background="@color/colorPrimary"
            android:text="EventBus"/>

        <Button
            android:id="@+id/btnFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="@{presenter.onClick}"
            android:text="Fragment"/>



    </LinearLayout>

</layout>
